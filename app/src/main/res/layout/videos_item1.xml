<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <com.facebook.drawee.view.SimpleDraweeView
       android:id="@+id/v_touxiang"
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_alignParentTop="true"
       android:layout_marginLeft="28dp"
       android:layout_marginStart="28dp"
       android:layout_marginTop="10dp"
       app:placeholderImage="@drawable/raw_1500002478"
       app:roundAsCircle="true" />

   <TextView
       android:id="@+id/v_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignTop="@+id/v_touxiang"
       android:layout_marginLeft="19dp"
       android:layout_marginStart="19dp"
       android:layout_toEndOf="@+id/v_touxiang"
       android:layout_toRightOf="@+id/v_touxiang"
       android:text="天蝎喝牛奶"
       android:textColor="#e10c0c"
       android:textSize="15sp" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/v_name"
       android:layout_alignStart="@+id/v_name"
       android:layout_below="@+id/v_name"
       android:text="天蝎喝牛奶"
       android:textColor="#e10c0c"
       android:textSize="15sp"
       android:id="@+id/v_time" />

   <ImageView
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:layout_alignParentEnd="true"
       android:layout_alignParentRight="true"
       android:layout_alignTop="@+id/v_name"
       android:layout_marginEnd="34dp"
       android:layout_marginRight="34dp"
       android:background="@drawable/raw_1500021052" />

   <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
       android:id="@+id/include"
       android:layout_width="match_parent"
       android:layout_height="180dp"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true"
       android:layout_below="@+id/v_tianqi"
       android:layout_marginTop="16dp" />


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/textView7"
       android:layout_alignStart="@+id/textView7"
       android:layout_below="@+id/textView7"

       android:layout_marginTop="15dp"
       android:text="骑猪上高速："
       android:textColor="#FF0CCCE1"
       android:textSize="15sp"
       android:id="@+id/textView8" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/v_touxiang"
       android:layout_alignStart="@+id/v_touxiang"
       android:layout_below="@+id/include"

       android:layout_marginTop="15dp"
       android:text="骑猪上高速："
       android:textColor="#FF0CCCE1"
       android:textSize="15sp"
       android:id="@+id/textView7" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/v_touxiang"
       android:layout_alignStart="@+id/v_touxiang"
       android:layout_below="@+id/v_time"
       android:id="@+id/v_tianqi"
       android:layout_marginTop="16dp"
       android:text="天气美美的适合郊游"
       android:textSize="15sp" />
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"

       android:layout_alignBaseline="@+id/textView7"
       android:layout_alignBottom="@+id/textView7"
       android:layout_marginLeft="11dp"
       android:layout_marginStart="11dp"
       android:layout_toEndOf="@+id/textView7"
       android:layout_toRightOf="@+id/textView7"
       android:text="不错"

       android:textSize="15sp"
       android:id="@+id/textView9" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"

       android:layout_alignBaseline="@+id/textView8"
       android:layout_alignBottom="@+id/textView8"
       android:layout_alignLeft="@+id/textView9"
       android:layout_alignStart="@+id/textView9"
       android:text="不错"

       android:textSize="15sp" />
</RelativeLayout>
