<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/raw_1499945498"
       />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ss"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/iv"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginBottom="44dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        app:placeholderImage="@drawable/raw_1499936862"
        android:focusableInTouchMode="true"
        app:roundAsCircle="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ss"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_toEndOf="@+id/ss"
        android:layout_toRightOf="@+id/ss"
        android:text="椰奶果茶"
        android:textColor="#fff"
        android:textSize="15sp"
        android:id="@+id/textView3" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:background="@drawable/raw_1499948747" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="11dp"
        android:text="设置个性签名"
        android:textColor="#fff"
        android:textSize="15sp"
        android:id="@+id/textView4" />
</RelativeLayout>