<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/raw_1500978266"
    tools:context="com.example.administrator.yikezhongpro.view.FabuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF4297FF"
         >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:text="创作"
            android:textColor="#fff"
            android:textSize="20sp"
            android:id="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView6"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:text="取消"
            android:textColor="#fff"
            android:id="@+id/fb_quxiao"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/fb_duanzi"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/fb_shipin"
            android:layout_alignStart="@+id/fb_shipin"
            android:layout_below="@+id/fb_shipin"
            android:layout_marginTop="48dp"
            app:placeholderImage="@color/yellow"
            app:roundAsCircle="true" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/fb_shipin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            app:placeholderImage="@color/yellow"
            app:roundAsCircle="true" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/fb_shipin"
            android:layout_centerHorizontal="true"
            android:background="@drawable/raw_1500971112" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:layout_alignLeft="@+id/imageView6"
            android:layout_alignStart="@+id/imageView6"
            android:layout_alignTop="@+id/fb_duanzi"
            android:background="@drawable/raw_1500971213" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView6"
            android:layout_centerHorizontal="true"
            android:text="视频"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/imageView7"
            android:text="段子"
            android:textSize="15sp" />
    </RelativeLayout>
</LinearLayout>
